        android:letterSpacing="0.2"
        android:textColor="#E4C296"
        android:textSize="30dp"/>
    <ListView
        android:id="@+id/lvCountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>